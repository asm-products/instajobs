.container.jobsNear
	.infowindow			

	.row.loadinggif{"ng-show" => "loading"}
		%img{"src" => "reload.gif"}
	%ui-gmap-google-map{"center" => 'map.center', "zoom" => 'map.zoom'}
		%ui-gmap-marker{"coords" => "marker.coords", "idKey" => "marker.id", "options" => "marker.options", "events" => "markerEvent"}
		%ui-gmap-markers{"models" => "jobs", "coords" => "'coords'", "options" => "markers.options", "idKey" => "id", "events" => "markersEvents"}
	%br
	.row
		.col-md-4
			Radius - {{radius}}
		.col-md-8
			%div{"ui-slider" => "slider.options", "min" => 5, "max" => "100", "ng-model" => "radius"}
	%br
	.row
		.col-md-12
			.div.jobdiv.col-md-3{"ng-repeat" => "job in jobs track by $index"}
				.row.like
					.col-md-2
						%span.glyphicon.glyphicon-thumbs-up{"ng-click" => "addJob(job)"}
					.col-md-7.text-center
						%img{:src => "assets/images/1.jpg"}
					.col-md-2
						%span.glyphicon.glyphicon-thumbs-down{"ng-click" => "removeJob(job)"}
				.row.title
					.col-md-12.text-center
						%h4
							{{job.title}}
				.row.resdiv
					.col-md-12
						%p.info
							Responsibility
						%p
							{{job.responsibility}}
				.row.descdiv
					.col-md-12
						%p.info
							Job Description
						%p
							{{job.description}}
				.row
					.col-md-6
						%p
							Salary - {{job.salary}} 
					.col-md-6
						%p
							Hours - {{job.hours}}
				.row.more
					.col-md-12
						More details

